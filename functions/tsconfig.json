{
  "compilerOptions": {
    "target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
    "removeComments": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"checkJs": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "compileOnSave": true,
  "paths": {
    "@/*": [
      "*"
    ]
  },
  "include": [
    "src"
  ]
}
